pipeline {
    agent any

    environment {
        TF_IN_AUTOMATION = "true"
        AWS_DEFAULT_REGION = "eu-north-1"   // change if needed
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Init') {
            steps {
                dir('Terraform') {
                    sh 'terraform init -reconfigure'
                }
            }
        }

//        stage('Terraform Validate') {
//            steps {
//                dir('Terraform') {
//                    sh 'terraform validate'
//                }
//            }
//        }

        stage('Terraform Plan') {
            steps {
                dir('Terraform') {
                    sh '''
                        terraform plan \
                          -input=false \
                          -out=tfplan
                    '''
                }
            }
        }

        stage('Approve Apply') {
            steps {
                input message: 'Apply Terraform changes?', ok: 'Apply'
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('Terraform') {
                    sh '''
                        terraform apply \
                          -input=false \
                          tfplan
                    '''
                }
            }
        }
        stage('Generate Ansible Inventory') {
            steps {
                dir('Terraform') {
                    sh '''
                      AppVM_IP=$(terraform output -raw AppVM_public_ip)
                      MonitorVM_IP=$(terraform output -raw MonitorVM_public_ip)
        
                      echo "AppVM IP: $AppVM_IP"
                      echo "MonitorVM IP: $MonitorVM_IP"
        
                      cat <<EOF > ../Ansible/inventory.ini
                        [App]
                        $AppVM_IP ansible_user=ubuntu
                        
                        [Monitor]
                        $MonitorVM_IP ansible_user=ubuntu
                        EOF
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Terraform infrastructure created successfully'
        }
        failure {
            echo 'Terraform pipeline failed'
        }
    }
}
