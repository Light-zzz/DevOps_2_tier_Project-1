pipeline {
    agent any

    environment {}

    stages {

        stage('Checkout Code') {
            steps {
                git 'https://github.com/Light-zzz/DevOps_2_tier_Project-1.git'
            }
        }

        stage('Terraform Init') {
            steps {
                dir('terraform') {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                dir('terraform') {
                    sh 'terraform validate'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('terraform') {
                    sh 'terraform plan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('terraform') {
                    sh 'terraform apply -auto-approve'
                }
            }
        }

        stage('Save Outputs') {
            steps {
                dir('terraform') {
                    sh '''
                    terraform output -json > ../ansible/terraform_output.json
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "✅ Infrastructure created successfully"
        }
        failure {
            echo "❌ Terraform failed"
        }
    }
}
