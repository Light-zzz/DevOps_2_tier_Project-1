pipeline {
    agent any

    environment {
        TF_IN_AUTOMATION = "true"
        AWS_DEFAULT_REGION = "eu-north-1"   // change if needed
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Init') {
            steps {
                dir('Terraform') {
                    sh 'terraform init -reconfigure'
                }
            }
        }

//        stage('Terraform Validate') {
//            steps {
//                dir('Terraform') {
//                    sh 'terraform validate'
//                }
//            }
//        }

        stage('Terraform Plan') {
            steps {
                dir('Terraform') {
                    sh '''
                        terraform plan \
                          -input=false \
                          -out=tfplan
                    '''
                }
            }
        }

        stage('Approve Apply') {
            steps {
                input message: 'Apply Terraform changes?', ok: 'Apply'
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('Terraform') {
                    sh '''
                        terraform apply \
                          -input=false \
                          tfplan
                    '''
                }
            }
        }
        stage('Generate Ansible Inventory') {
            steps {
                dir('Terraform') {
                    sh '''
                      AppVM_IP=$(terraform output -raw AppVM)
                      MonitorVM_IP=$(terraform output -raw MonitorVM)
        
                      echo "AppVM IP: $AppVM_IP"
                      echo "MonitorVM IP: $MonitorVM_IP"
                      cd ..
                      cat <<EOF > ansible/inventory.ini
[App]
$AppVM_IP ansible_user=ubuntu

[Monitor]
$MonitorVM_IP ansible_user=ubuntu
EOF
                    '''
                }
            }
        }
        stage('Commit Inventory to Git') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'GitHub-cred',
                    usernameVariable: 'GIT_USER',
                    passwordVariable: 'GIT_TOKEN'
                )]) {
                    sh '''
                      git config user.name "Light-zzz"
                      git config user.email "dipeshvishwa767@gmail.com"
        
                      git status
                      git add ansible/inventory.ini
        
                      # Commit only if file changed
                      git diff --cached --quiet || git commit -m "Update Ansible inventory from Jenkins"
        
                      git push https://$GIT_USER:$GIT_TOKEN@github.com/Light-zzz/DevOps_2_tier_Project-1.git HEAD:main
                    '''
                }
            }
        }
        stage('Trigger Deployment Pipeline') {
            steps {
                build job: 'Deploy python app', wait: false
            }
        }
    }

    post {
        success {
            echo 'Terraform infrastructure created successfully'
        }
        failure {
            echo 'Terraform pipeline failed'
        }
    }
}
