pipeline {
    agent any

  parameters {
    choice(name: 'ACTION', choices: ['apply', 'destroy'], description: 'Terraform Action')
  }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Terraform Init') {
            steps {
                dir('Terraform') {
                    sh 'terraform init -reconfigure'
                }
            }
        }
//        stage('Terraform Validate') {
//            steps {
//                dir('Terraform') {
//                    sh 'terraform validate'
//                }
//            }
//        }
        stage('Terraform Plan') {
            steps {
                dir('Terraform') {
                    sh '''
                        terraform plan \
                          -input=false \
                          -out=tfplan
                    '''
                }
            }
        }
//        stage('Approve Apply') {
//            steps {
//                input message: 'Apply Terraform changes?', ok: 'Apply'
//            }
//        }
        stage('Terraform Apply/Destroy') {
          steps {
            dir('terraform') {
              sh """
                if [ "${ACTION}" == "apply" ]; then
                  terraform apply -auto-approve
                else
                  terraform destroy -auto-approve
                fi
              """
            }
          }
        }
        stage('Generate Ansible Inventory') {
          when {
            expression { params.ACTION == 'apply' }
          }
          steps {
            sh """
            APP_IP=$(terraform -chdir=terraform output -raw app_ip)
            MON_IP=$(terraform -chdir=terraform output -raw monitor_ip)
    
            cat <<EOF > ansible/inventory.ini
[app]
$APP_IP ansible_user=ubuntu

[monitor]
$MON_IP ansible_user=ubuntu
EOF
"""
          }
        }
        stage('Commit Inventory to Git') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'GitHub-cred',
                    usernameVariable: 'GIT_USER',
                    passwordVariable: 'GIT_TOKEN'
                )]) {
                    sh '''
                      git config user.name "Light-zzz"
                      git config user.email "dipeshvishwa767@gmail.com"
        
                      git status
                      git add ansible/inventory.ini
        
                      # Commit only if file changed
                      git diff --cached --quiet || git commit -m "Update Ansible inventory from Jenkins"
        
                      git push https://$GIT_USER:$GIT_TOKEN@github.com/Light-zzz/DevOps_2_tier_Project-1.git HEAD:main
                    '''
                }
            }
        }
//        stage('Trigger Deployment Pipeline') {
//            steps {
//                build job: 'Setup-Packages-ansible', wait: false
//            }
//        }
    }

    post {
        success {
            build job: 'Ansible-Pipeline', wait: false
            echo 'Terraform infrastructure created successfully'
        }
        failure {
            echo 'Terraform pipeline failed'
        }
    }
}
